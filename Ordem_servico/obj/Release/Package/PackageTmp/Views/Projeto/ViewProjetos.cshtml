@model IEnumerable<TransferenciaObjetos.Projeto>

@Styles.Render("~/Content/themes/sb-admin-v2/css/plugins/dataTables/dataTables.bootstrap.css")
@Scripts.Render("~/bundles/modernizr")

<div class="col-lg-12" style="margin-top:30px">
    <u><b>Resultados da pesquisa</b></u>
    <table class="table table-striped table-bordered table-hover" id="dataTables-Projetos">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasGerente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasCoordenador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasConsultor)
                </th>
                <th>...</th>
                <th>...</th>
                <th>...</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>        
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>                                            
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasGerente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasCoordenador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasConsultor)
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Projeto", new { id = item.Codigo })">
                            <img src="~/Images/details.ico" width="20" height="20" alt="Detalhes" title="Detalhes" />
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Projeto", new { id = item.Codigo })">
                            <img src="~/Images/editar.ico" width="20" height="20" alt="Detalhes" title="Editar" />
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "Projeto", new { id = item.Codigo })">
                            <img src="~/Images/excluir.ico" width="20" height="20" alt="Detalhes" title="Editar" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Scripts.Render("~/Scripts/jquery-1.10.2.js")
@Scripts.Render("~/Scripts/plugins/metisMenu/jquery.metisMenu.js")
@Scripts.Render("~/Scripts/plugins/dataTables/jquery.dataTables.js")
@Scripts.Render("~/Scripts/plugins/dataTables/dataTables.bootstrap.js")
@Scripts.Render("~/Scripts/sb-admin.js")

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $('#dataTables-Projetos').dataTable({
            "oLanguage": {
                "sProcessing": "Processando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "Não foram encontrados resultados",
                "sInfo": "Mostrando de _START_ ate _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando de 0 até 0 de 0 registros",
                "sInfoFiltered": "",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sURL": "",
                "oPaginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Seguinte",
                    "sLast": "Último"
                }
            }
        });
    });
</script>
