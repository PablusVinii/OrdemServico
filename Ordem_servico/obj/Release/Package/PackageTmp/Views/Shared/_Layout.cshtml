<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href='@Url.Content("~/Images/icon_impacto.png")' rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/themes/sb-admin-v2/css/bootstrap.min.css")
    @Styles.Render("~/Content/themes/sb-admin-v2/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Content/themes/sb-admin-v2/css/plugins/morris/morris-0.4.3.min.css")
    @Styles.Render("~/Content/themes/sb-admin-v2/css/plugins/timeline/timeline.css")
    @Styles.Render("~/Content/themes/sb-admin-v2/css/sb-admin.css")
    @Styles.Render("~/Content/themes/custom.css")
    @Styles.Render("~/Content/themes/datepicker/datepicker.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/jquery.maskedinput.js")
    <script type="text/javascript" language="javascript">
        jQuery(function ($) {
            $("#Inicio").mask("99:99");
            $("#Fim").mask("99:99");
            $("#Traslado").mask("99:99");
            $("#Total").mask("999:99");

            $("#Data").datepicker({
                format: 'dd/mm/yyyy'
            }).addClass('form-control');

            $("#DataDe").datepicker({
                format: 'dd/mm/yyyy'
            }).addClass('form-control');

            $("#DataAte").datepicker({
                format: 'dd/mm/yyyy'
            }).addClass('form-control');
        });
    </script>
</head>
<body>
    @RenderSection("featured", required: false)
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img src="~/Images/icon_impacto.png" />  <small>TRS Sistemas</small></a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        @{
                            TransferenciaObjetos.Autenticacao.Usuario umUsuario = (TransferenciaObjetos.Autenticacao.Usuario)Session["UsuarioLogado"];
                        }

                        @umUsuario.Funcionario.Reduzido
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("AlterarSenha","Login")" ><i class="fa fa-user fa-fw"></i> Alterar Senha</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Sair","Login")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("Filter","OS")"><i class="fa fa-sitemap fa-fw"></i> Ordens de Serviços</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Projeto")"><i class="fa fa-briefcase fa-fw"></i> Projetos</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Meta")"><i class="fa fa-flag fa-fw"></i> Metas</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Agendamento")"><i class="fa fa-table fa-fw"></i> Agendamentos</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Funcionario")"><i class="fa fa-edit fa-fw"></i> Recursos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            @RenderBody()

            <div style="text-align:center;">
                <p>&copy; 2006 - @DateTime.Now.Year - <a href="http://www.trssistemas.com.br/">TRS Sistemas</a> </p>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
