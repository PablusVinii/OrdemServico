@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@WebReportGlobals.Scripts()
@WebReportGlobals.Styles()

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            <a href="@Url.Action("Index", "OS")">
                <img src="~/Images/voltar.ico" title="Voltar" width="50px" height="50px" />
            </a>
            @ViewBag.Title
        </h2>
        <ol class="breadcrumb">
            <li><a href='@Url.Action("Index")'>Ordem de Serviço</a></li>
            <li class="active">Relatório de Ordem de Serviço</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @{
            var relatorio = ViewBag.Relatorio;

            if(relatorio != null)
            {
                @ViewBag.Relatorio.GetHtml()
            }
            else
            {
                <div class="alert alert-warning alert-dismissable" style="margin-top:30px">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    Não há dados para serem exibidos
                </div>
            }
        }
    </div>
</div>
